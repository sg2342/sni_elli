%% -*- erlang -*-
{minimum_otp_vsn, "22.2"}.

{project_plugins, [rebar3_lint, erlfmt]}.

{erl_opts, [debug_info]}.
{deps, [
    {elli, {git, "https://github.com/elli-lib/elli.git", {tag, "3.3.0"}}},
    {snierl, {git, "https://github.com/sg2342/snierl.git", {tag, "0.1.8"}}}
]}.

{profiles, [
    {test, [
        {erlfmt, [check]},
        {dialyzer, [{warnings, [unmatched_returns, error_handling]}]},
        {dialyzer, [{plt_extra_apps, [snierl, elli]}]},
        {xref_warnings, true},
        {xref_checks, [
            undefined_function_calls,
            undefined_functions,
            locals_not_used,
            exports_not_used,
            deprecated_function_calls,
            deprecated_functions
        ]}
    ]}
]}.

{elvis, [
    #{
        dirs => ["src/**"],
        filter => "*.erl",
        ruleset => erl_files
    },
    #{
        dirs => ["."],
        filter => "rebar.config",
        ruleset => rebar_config
    }
]}.
